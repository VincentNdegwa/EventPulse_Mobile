<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".Fragments.HomeEvents">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/search_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:drawableEnd="@drawable/search_icon"
            android:drawablePadding="14sp"
            android:hint="Search"
            android:background="@drawable/input_bg"
            android:padding="20sp"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:textColorHint="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Latest"
                    android:textColor="@color/white"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="ViewAll"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/orange"
                    android:gravity="end"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="10sp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/latest_events_recycler"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Recommended"
                    android:textColor="@color/white"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="ViewAll"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/orange"
                    android:gravity="end"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="10sp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/recommended_events_recycler"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Upcoming events"
                    android:textColor="@color/white"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="ViewAll"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/orange"
                    android:gravity="end"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/invisible_holder"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="No Data"
                    android:textColor="@color/green"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="25dp"/>

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="10sp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/upcoming_events_recycler"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tending Event"
                android:textColor="@color/white"
                android:textSize="20dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="10sp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/trending_events_recycler"/>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>